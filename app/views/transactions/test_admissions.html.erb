<html>
  <head>
    <title>Admissions</title>
    <style>
      html {
        margin: 0;
        padding: 0;
      }
      body {
        margin: 0 auto;
      }
      svg {
        display: block;
        margin: 0 auto;
        max-height: 900px;
        max-width: 450px;
      }
      text {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <% if @ticket[:layout] %>
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
        viewBox="0 0 600 1200" preserveAspectRatio="xMidYMid meet">
        <g>
          <image x="0" y="0" width="600" height="1200" xlink:href="<%= @ticket[:background_url] %>" />
        </g>
        <%= @ticket[:layout].html_safe %>
      </svg>
    <% end %>
  </body>
</html>
