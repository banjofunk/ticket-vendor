- require 'csv'
- headers = ['Promo ID',
             'Attraction',
             'Description',
             'QTY']
= CSV.generate_line headers
- @promotions.each do |promotion|
  = CSV.generate_line([promotion.id,
                       promotion.attraction.name,
                       promotion.short_description.gsub("\n",' '),
                       promotion.admissions.where(transaction_id:nil).count])
